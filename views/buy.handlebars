        </div>
    </nav>
    <img src="../assets/img/airmax.jpg" class="img-fluid" alt="Responsive image" max-width="100%" style="padding-bottom: 20px;">{{!-- container for cards --}}

    <div class="container mx-auto" id="card-container">
        <p id='sell-text'>Buy or bid on a shoe. All sales final. Buy/Bid with confidence.</p>


        {{!-- Cards just use #each to loop through --}}
        {{!-- Has ID for looping through handlebars --}}
    {{#each shoes}}
      <div class="card rounded-0 mx-auto" id="sneaker-card">
        <div class="card-body" id="sneaker-card-body">
          <h3 class="card-title" id="sneaker-title">{{name}}</h3>
          <p class="card-text" id="buy-text">
            SIZE <span id="sneaker-size">{{size}}</span> <span class= "pipe"> | </span>
            CURRENT BID: <span id="current-bid">${{highest_bid}}</span><span class= "pipe"> | </span>
            BUY NOW PRICE: <span id="buy-now">${{buy_now}}</span><span class= "pipe"> | </span>
            SNEAKER ID: <span id ="sneakId">{{id}}</span></p>
          <a href="./api/{{id}}"><button type="button" class="btn" id="bid-button">BID</button></a>
          <button type="button" class="btn" id="buy-now-button">BUY NOW</button>
        </div>
      </div>
      {{/each}}
    </div>



    <div id="bid-modal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">sneaks</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-lg-12">
                                <form>
                                    <h3 id=shoe-modal-title> {{@index}}: {{this}}</h3>
                                    <div id="current-bid-text">
                                        <p>CURRENT PRICE <span id="modal-price">this.{{highest_bid}}</span></p>
                                    </div>
                                    <hr>

                                    <!-- THIS IS FOR ADDING IMAGES

                                          <div class=“form-group”>
                                            <label for=“exampleFormControlFile1">Example file input</label>
                                            <input type=“file” class=“form-control-file” id=“exampleFormControlFile1”>
                                          </div> -->

                                    <div class="form-group">
                                        <label for="minimumbid">YOUR BID</label>
                                        <input type="input" class="form-control" id="minimumbid" value="$1000">
                                    </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" id="modal-button" data-dismiss="modal">BID NOW</button>
                            </div>
                        </div>
                    </div>
                    <!-- container-fluid-div -->
                </div>
            </div>
        </div>
    </div>





<div id="buy-body">
    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="nav-bar-container">
        <a class="navbar-brand" href="./">sneaks</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="./about">ABOUT
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./buy">BUY</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./sell">SELL</a>
                </li>
            </ul>
        </div>
    </nav>
    <img src="../assets/img/airmax.jpg" class="img-fluid" alt="Responsive image" max-width="100%" style="padding-bottom: 20px;">{{!-- container for cards --}}

    <div class="container-fluid mx-auto" id="card-container">
        <p id='sell-text'>Buy or bid on a shoe. All sales final. Buy/Bid with confidence.</p>
        <!-- Timer will get inserted into here -->
        <p id="timer" class="mx-auto"></p>


        {{!-- Cards just use #each to loop through --}}
        {{!-- Has ID for looping through handlebars --}}
    {{#each shoes}}
      <div class="card rounded-0 mx-auto mx-auto" id="sneaker-card">
        <div class="card-body" id="sneaker-card-body">
            <img id="photo" src="{{photo}}">
            <h3 class="card-title" id="sneaker-title">{{brand}}</h3>
          <h3 class="card-title" id="sneaker-title">{{name}}</h3>

          <p class="card-text" id="buy-text">
            SIZE <span id="sneaker-size">{{size}}</span> <span class= "pipe"> | </span>
            CURRENT BID: <span id="current-bid">${{highest_bid}}</span><span class= "pipe"> | </span>
            BUY NOW PRICE: <span id="buy-now">${{buy_now}}</span><span class= "pipe"> | </span>
            SNEAKER ID: <span id ="sneakId">{{id}}</span></p>
          <button type="button" class="btn" id="bid-button" data-toggle="modal" data-target="#thebid" data-id="{{id}}" data-name="{{name}}" data-highbid="{{highest_bid}}" data-brand="{{brand}}">BID</button>
          <button type="button" class="btn" id="buy-now-button" data-target="#thebuy" data-toggle="modal" data-brand="{{brand}}" data-name="{{name}}" data-buy="{{buy_now}}">BUY NOW</button>
        </div>
      </div>
      {{/each}}
    </div>

    <div id="thebid" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">sneaks</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-lg-12">
                                <form>
                                    <h3 id="shoe-modal-title"></h3>
                                    <div id="current-bid-text">
                                        <p>CURRENT PRICE <span id="modal-price"></span></p>
                                    </div>
                                    <hr>

                                    <div class="form-group">
                                        <label for="minimumbid"><strong>YOUR BID</strong></label><br>
                                        <p id="lowbid">LOWEST BID</p>
                                        <input type="input" class="form-control" id="minimumbid">
                                    </div>
                                </form>
                            </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="buy-button" data-dismiss="modal">BID NOW</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="thebuy" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">sneaks</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-lg-12">
                                <form>
                                    <h3 id="shoe-modal-name"><strong></h3></strong>
                                    <div id="current-bid-text">
                                        <!-- <h2 id="buy-it-now">BUY IT NOW</h2> -->
                                        <h3 id="modal-buynow"></h3>
                                    </div>
                                </form>
                            </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="checkout-button" data-dismiss="modal">BUY NOW</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
